{% extends 'admin.html.twig' %}

{% block main %}
    <section class="d-flex">
        <a href="{{ path('user_index') }}" class="btn text-center mr-5" type="button" style="font-size: 1.5em;"><i class="fas fa-arrow-left"></i> Back</a>
        <h1>Edit User</h1>
    </section>

    <form name="user" method="post">
        <div id="user">
            <div class="form-group">
                <label for="user_email" class="required">Email</label>
                <input type="text" id="user_email" name="user[email]" required="required" maxlength="180" class="form-control" value="{{ user.email }}" />
            </div>
            <fieldset class="form-group">
                <legend class="col-form-label required">Roles</legend>
                <div id="user_roles"><div class="form-check">
                        <input type="checkbox" id="user_roles_0" name="user[roles][]" class="form-check-input" value="ROLE_ADMIN" {% if user.roles.0  == 'ROLE_ADMIN' %} checked="checked" {% endif %} />
                        <label class="form-check-label" for="user_roles_0">admin</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" id="user_roles_1" name="user[roles][]" class="form-check-input" value="ROLE_USER" checked="checked" />
                        <label class="form-check-label" for="user_roles_1">user</label>
                    </div>
                </div>
            </fieldset>
            <div class="form-group">
                <label for="user_password" class="required">Password</label>
                <input type="text" id="user_password" name="user[password]" required="required" class="form-control" value="{{ user.password }}" />
            </div>
            <input type="hidden" id="user__token" name="user[_token]" value="{{ csrf_token('user') }}" />
        </div>
        <div class="float-right">
            <button class="btn btn-primary">Update</button>
            <a href="#" class="popover-a btn btn-danger" tabindex="0"  role="button" data-toggle="popover" data-trigger="focus" title='<p class="">Are you sure you want to delete this user?</p>' data-content='{{ include('admin/user/_delete_form.html.twig') }}'>Delete</a>
        </div>
    </form>
{% endblock %}
