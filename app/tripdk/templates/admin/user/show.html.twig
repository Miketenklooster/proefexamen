{% extends 'admin.html.twig' %}

{% block main %}
    <section class="d-flex">
        <a href="{{ path('user_index') }}" class="btn text-center mr-5" type="button" style="font-size: 1.5em;"><i class="fas fa-arrow-left"></i> Back</a>
        <h1>User</h1>
    </section>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>
    <div class="float-right">
        <a href="{{ path('user_edit', {'id': user.id}) }}" type="button" class="btn btn-primary">Edit</a>
        <a href="#"  class="popover-a btn btn-danger" tabindex="0"  role="button" data-toggle="popover" data-trigger="focus" title='<p class="">Are you sure you want to delete this user?</p>' data-content='{{ include('admin/user/_delete_form.html.twig') }}'>Delete</a>
    </div>
{% endblock %}
