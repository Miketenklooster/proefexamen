{% extends 'admin.html.twig' %}

{% block main %}
    <section class="d-flex">
        <a href="{{ path('gallery_index') }}" class="btn text-center mr-5" type="button" style="font-size: 1.5em;"><i class="fas fa-arrow-left"></i> Back</a>
        <h1>Gallery</h1>
    </section>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ gallery.info }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ gallery.category }}</td>
            </tr>
            <tr>
                <th>Image_name</th>
                <td>{{ gallery.imageName }}</td>
            </tr>
        </tbody>
    </table>

    <div class="float-right">
        <a href="{{ path('gallery_edit', {'id': gallery.id}) }}" type="button" class="btn btn-primary">Edit</a>
        <a href="#"  class="popover-a btn btn-danger" tabindex="0"  role="button" data-toggle="popover" data-trigger="focus" title='<p class="">Are you sure you want to delete this record?</p>' data-content='{{ include('admin/gallery/_delete_form.html.twig') }}'>Delete</a>
    </div>
{% endblock %}
