{% extends 'admin.html.twig' %}

{% block main %}

    <section class="d-flex">
        <a href="{{ path('gallery_index') }}" class="btn text-center mr-5" type="button" style="font-size: 1.5em;"><i class="fas fa-arrow-left"></i> Back</a>
        <h1>Edit Gallery</h1>
    </section>
    <form name="gallery" method="post" enctype="multipart/form-data">
        <div id="gallery">
            <div class="form-group">
                <label for="gallery_info" class="required">Info</label>
                <input type="text" id="gallery_info" name="gallery[info]" required="required" maxlength="255" class="form-control" value="{{ gallery.info }}" />
            </div>
            <div class="form-group">
                <label for="gallery_category" class="required">Category</label>
                <input type="text" id="gallery_category" name="gallery[category]" required="required" maxlength="100" class="form-control" value="{{ gallery.category }}" />
            </div>
            <div class="form-group">
                <label for="gallery_image_name">Bestand bijwerken</label>
                <div class="custom-file">
                    <input type="file" accept="image/jpeg, image/png" id="gallery_image_name" name="gallery[image_name]" class="pointer custom-file-input" />
                    <label for="gallery_image_name" lang="eng"  class="custom-file-label  text-right label shadow-none">{{ gallery.imageName }}</label>
                </div>
            </div>
            <input type="hidden" id="gallery__token" name="gallery[_token]" value="{{ csrf_token('gallery') }}" />
        </div>
        <div class="float-right mt-5">
            <button class="btn btn-primary">Update</button>
            <a href="#" class="popover-a btn btn-danger" tabindex="0"  role="button" data-toggle="popover" data-trigger="focus" title='<p class="">Are you sure you want to delete this user?</p>' data-content='{{ include('admin/gallery/_delete_form.html.twig') }}'>Delete</a>
        </div>
    </form>

{% endblock %}
