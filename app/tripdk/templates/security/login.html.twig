{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('../css/login.css') }}"/>
{% endblock %}
{% block main %}
    <section class="container-fluid ">
        <section class="login-reg-panel row align-items-center">
            <section class="login-info-box">
            </section>
            <section class="white-panel">
                <article class="login-show show-log-panel">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                        <section class="form-group">
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        </section>
                        <section class="form-group">
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" required>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </section>
                        <section class="form-group checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </section>

                        <button class="btn btn-lg btn-dark float-right" type="submit">
                            Sign in
                        </button>
                    </form>
                </article>
            </section>
        </se>
    </section>
{% endblock %}
